<div class="wrapper">
  <section class="custom-wrap">
    <div class="container">
      <div class="Dashboard-section">
        <div class="row mt-5 mb-5">
          <div class="col-md-12">
            <div class="">
              <ul class="list-none d-flex j-space">
                <li>
                  <p class="black-bold-color">Product Management</p>
                </li>
              </ul>
              <ul class="list-none d-flex right-data">
               <li class="search-box">
               	<a href="/products/new">
               	<button class="green-btn-sqare create-btn-sqare">Create New Product</button>
               </a>
               </li>
                <li class="nav-item">
                  <%=form_tag "/products", method: :get,  class:"search-box" do  %>                     
                  <input type="search" name="search" class="form-control" placeholder="Search Product by Name">
                      <img src="/assets/search.png">
                  <%end%>
              </li>
              </ul>
              <div class="table-responsive activity-table-scroll-big ">
                <table  class="table activity-table" id="sort">
                  <thead>
                    <tr class="table-fontsize">
                      <th scope="col">id</th>
                      <th scope="col">Product Name</th>
                      <th scope="col">Image</th>
                      <th scope="col">Description</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @products.each_with_index do |product, i| %>
                    <tr class="table-fontsize white-background">
                      <td><%= i+1 %></td>
                      <td><%= product&.name %></td>
                      <td>
                        <%= cl_image_tag(product&.image&.file, class: "img", :flags => :attachment) %>
                      </td>
                      <td><p style="max-width: 300px"><%= product&.description %></p></td>
                      <td>
                        <div class="elips">
                          <i class="fa fa-ellipsis-v doted "></i>
                        </div>
                      </td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
          
            </div>
          </div>
        </div>

      </div>
  </section>

</div>

<div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <img class="modal-content-img normal" id="img01" style="height:350px;max-width: 465px;"><br />
            </div>
            <div class="modal-footer">
                <a id="download" href="">
                  <button type="submit" class="btn btn-outline-primary btn-sm">Download</button>
                </a>
                <button type="button" class="btn btn-outline-secondary btn-sm" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    $('img.img').click(function(){
      var img = $(this).attr('src');
      var modalImg = document.getElementById("img01");
      $('#imageModal').modal('show')
      modalImg.src = img;
      $('#download').attr('href', img);
    });
  });
</script>
