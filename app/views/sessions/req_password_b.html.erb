<html lang="en">

   <body class="beforelogin">
    <%= form_with scope: :forgot_password, url: req_password_path , method: :get ,local: true, id: "req_password" do |f| %>
      <div class="row align-items-center bodywraper">
         <div class="col">
		  <form class="form-box" action="dashboard.html">
            <div class="login-box max-WT-500">
               <div class="login-box-body">
                  <div class="text-center">
                     <h3>Password Request</h3>
                  </div>
			     <div class="form-group">
				  <!--  <input type="email" class="form-control form-control-style1 " placeholder="Email Address" required/> -->
               <%= f.text_field :email ,class: "form-control form-control-style1",value: params[:email],placeholder: "Email Address" %>
				 </div>
				 
				 <div class="text-center mt-20">
				<!--   <a  class="btn btn-gray btn-large radius0 max-WT-350" href="dashboard.html">LOGIN</a> -->
            <%= f.submit "Request", class: "btn btn-gray btn-large radius0 max-WT-350" %>
				 </div>

            </div>
            <div class="text-center">
                   <%= link_to  "Back to login" , admin_panel_path%>
                </div>
         </div>
         </form>
      </div>
   </div>
   <% end %>
   <footer>
      <div class="text-center">
         Copyright @ 2018. All rights are reserved.
      </div>
    </footer>

